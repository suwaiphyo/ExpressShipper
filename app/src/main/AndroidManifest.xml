            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.smk.ExpressShipper528.RegisterActivity"
            android:label="@string/strmm_register_title" />
        <activity
            android:name="com.smk.ExpressShipper528.CargoPlaceActivity"
            android:label="@string/strmm_cargoplace_title" />
        <activity
            android:name="com.smk.ExpressShipper528.CargoReceivePlaceActivity"
