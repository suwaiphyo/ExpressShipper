<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:minHeight="?android:attr/actionBarSize"
            android:popupTheme="@android:style/ThemeOverlay.Material.Light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:text="@string/strmm_level3"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorWhite" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerInParent="true"
                    android:background="@color/colorAccent" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="210dp"
                    android:layout_marginTop="0dp"
                    android:gravity="right"
                    android:text="@string/strmm_level4"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorGray" />

            </RelativeLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/strmm_cargoinfo_category"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorWhite" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_border_white"
                android:orientation="vertical"
                android:padding="@dimen/activity_vertical_margin">

                <EditText
                    android:id="@+id/edt_cargoinfo_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:hint="@string/strmm_cargoinfo_name"
                    android:inputType="textCapWords"
                    android:textColorHint="@color/colorWhite" />

                <EditText
                    android:id="@+id/edt_cargoinfo_qty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:hint="@string/strmm_cargoinfo_qty"
                    android:inputType="number"
                    android:textColorHint="@color/colorWhite" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_default_height"
                    android:background="@drawable/bg_border_white"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_cargoinfo_length"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/bg_border_white"
                        android:gravity="center"
                        android:hint="@string/strmm_cargoinfo_length"
                        android:inputType="numberDecimal"
                        android:padding="5dp"
                        android:textColorHint="@color/colorWhite" />

                    <EditText
                        android:id="@+id/edt_cargoinfo_width"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/bg_border_white"
                        android:gravity="center"
                        android:hint="@string/strmm_cargoinfo_width"
                        android:inputType="numberDecimal"
                        android:padding="5dp"
                        android:textColorHint="@color/colorWhite" />

                    <EditText
                        android:id="@+id/edt_cargoinfo_height"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/bg_border_white"
                        android:gravity="center"
                        android:hint="@string/strmm_cargoinfo_height"
                        android:inputType="numberDecimal"
                        android:padding="5dp"
                        android:textColorHint="@color/colorWhite" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_cargo_new"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    android:text="+"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/strmm_cargoinfo_next"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_default_height"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="50"
                android:background="@color/colorBlack"
                android:hint="@string/strmm_cargoplace_myorders"
                android:text="@string/strmm_back" />

            <Button
                android:id="@+id/btn_continue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_default_height"
                android:layout_weight="50"
                android:background="@color/colorGreen"
                android:hint="@string/strmm_continue"
                android:text="@string/strmm_continue" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
