<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:minHeight="?android:attr/actionBarSize"
            android:popupTheme="@android:style/ThemeOverlay.Material.Light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:text="@string/strmm_level2"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorWhite" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerInParent="true"
                    android:background="@color/colorAccent" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="210dp"
                    android:layout_marginTop="0dp"
                    android:gravity="right"
                    android:text="@string/strmm_level3"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorGray" />
            </RelativeLayout>

            <EditText
                android:id="@+id/edt_cargo_receive_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:hint="@string/strmm_cargoreceive_name"
                android:inputType="textCapWords"
                android:textColorHint="@color/colorWhite" />

            <EditText
                android:id="@+id/edt_cargo_receive_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:hint="@string/strmm_cargoreceive_email"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/colorWhite" />

            <EditText
                android:id="@+id/edt_cargo_receive_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:hint="@string/strmm_cargoreceive_phone"
                android:inputType="phone"
                android:textColorHint="@color/colorWhite" />

            <EditText
                android:id="@+id/edt_cargo_receive_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:hint="@string/strmm_cargoreceive_address"
                android:inputType="textCapWords"
                android:textColorHint="@color/colorWhite" />

            <Spinner
                android:id="@+id/spn_cargo_division"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spn_cargo_township"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_default_height"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="50"
                android:background="@color/colorBlack"

                android:hint="@string/strmm_cargoplace_myorders"
                android:text="@string/strmm_back" />

            <Button
                android:id="@+id/btn_continue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_default_height"
                android:layout_weight="50"
                android:background="@color/colorGreen"

                android:hint="@string/strmm_continue"
                android:text="@string/strmm_continue" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
